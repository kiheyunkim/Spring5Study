<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id = "welcome" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/welcome.jsp"></property>
	</bean>	
	
	<bean id = "reservationQuery" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/reservationQuery.jsp"></property>
	</bean>	
	
	<bean id = "welcomeRedirect" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="welcome"></property>
	</bean>	
</beans>